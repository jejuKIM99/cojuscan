{
  "name": "cojuscan",
  "version": "1.4.0-beta",
  "description": "A security scanner for source code with Simple and Precision (Semgrep) modes.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "node install-semgrep.js",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jejuKIM99/cojuscan.git"
  },
  "keywords": [],
  "author": "Cojus Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jejuKIM99/cojuscan/issues"
  },
  "homepage": "https://github.com/jejuKIM99/cojuscan#readme",
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "extract-zip": "^2.0.1"
  },
  "build": {
    "appId": "com.cojuscan.app",
    "productName": "cojuscan",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": ".py-semgrep",
        "to": ".py-semgrep"
      },
      {
        "from": "build",
        "to": "build"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "ko",
        "en"
      ],
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/uninstallerSidebar.bmp"
    }
  }
}
